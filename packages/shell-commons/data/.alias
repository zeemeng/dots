# vim: ft=sh

alias cdD='cd ~/Desktop && ls -lAh'
alias cdd='cd ~/src/dots'
alias cds='cd ~/src && ls -lAh'
alias cl=clear
alias d=docker
alias dimg='docker images'
alias dots='cd ~/src/dots && nvim'
alias dps='docker ps -a'
alias dr='docker run'
alias drit='docker run -it'
alias drm='docker rm --volumes'
alias drma='docker rm --volumes --force $(docker ps --quiet --all)'
alias drmi='docker rmi'
alias e=echo
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias g=git
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gch='git checkout'
alias gcl='git clean -fd'
alias gco='git commit'
alias gcoa='git commit --all'
alias gcoam='git commit --all -m'
alias gd='git diff'
alias gdh='git diff HEAD'
alias gdpc='git diff HEAD~' # Diff against one commit back from the current HEAD
alias gds='git diff --staged'
alias gf='git fetch'
alias ghp='git help'
alias gl='git log --all --graph'
alias glo='git log --all --graph --oneline'
alias gm='git merge'
alias gp='git push'
alias grem='git remote'
alias grema='git remote add -f'
alias gremao='git remote add -f origin'
alias grep='grep --color=auto'
alias gs='git status'
alias igrep='grep -i --color=auto'
alias l='less -M -R'
alias lctl=launchctl
alias ll='ls -lAhF'
alias lm='less -m -R'
alias ls='ls --color=auto'
alias m=man
alias md=mkdir
alias n=npm
alias nv=nvim
alias nr='npm run'
alias ns='npm start'
alias p=python3
alias ppl='plutil -p'
alias psh='ps -p $$'
alias py=python3
alias q=exit
alias sctl='systemctl'
alias ss1=sha1sum
alias ss2=sha256sum
alias ss512=sha512sum
alias t=tmux
alias ta='tmux attach'
alias tk='tmux kill-server'
alias tl='tmux ls'
alias uncommit='git reset --mixed HEAD~'
alias v=vim
alias xcommit='git reset --hard HEAD~'
alias xo=xdg-open

# Source a local configuration file if it exists
if [ -f ~/.alias.local ]; then
	. ~/.alias.local
fi

