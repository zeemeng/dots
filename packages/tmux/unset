#!/usr/bin/env sh

COMMON_PROFILE_D="$PKG_CONFIG_DEST/.common_profile.d"
rm "$COMMON_PROFILE_D/tmux"
if [ "$(ls -A "$COMMON_PROFILE_D")" ]; then rmdir "$COMMON_PROFILE_D"; fi

# Remap $PKG_CONFIG_DEST depending on value of #XDG_CONFIG_HOME env var
[ "$XDG_CONFIG_HOME" ] && PKG_CONFIG_DEST="$XDG_CONFIG_HOME/tmux" || PKG_CONFIG_DEST="$HOME/.config/tmux"
"$PKG_REPO/default/unset"

