#!/usr/bin/env sh

[ "$XDG_CONFIG_HOME" ] && CONFIG="$XDG_CONFIG_HOME/nvim" || CONFIG="$HOME/.config/nvim"
[ "$XDG_DATA_HOME" ] && DATA="$XDG_DATA_HOME/nvim" || DATA="$HOME/.local/share/nvim"
[ "$XDG_CACHE_HOME" ] && CACHE="$XDG_CACHE_HOME/nvim" || CACHE="$HOME/.cache/nvim"
rm -rf "$CONFIG" "$DATA" "$CACHE"

