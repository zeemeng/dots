#!/usr/bin/env sh

if [ command -v git >/dev/null 2>&1 ]; then
	git clone https://github.com/nvm-sh/nvm.git "$HOME/.nvm"
	cd "$HOME/.nvm"
	git checkout master
	git checkout $(git describe --tags --abbrev=0)
	. nvm.sh
else
	printf "ERROR: failed to install 'nvm' for unable to locate utility 'git'." >&2
fi

