#!/usr/bin/env sh

[ "$SETDOTS_PROMPT" -le 1 ] && NO_PROMPT='--yes'
[ "$SETDOTS_MGR" = "apt" ] && sudo apt purge $NO_PROMPT --autoremove "$PKG" && exit 0

[ "$SETDOTS_PROMPT" -le 1 ] && NO_PROMPT='--noconfirm'
[ "$SETDOTS_MGR" = "pacman" ] && sudo pacman -Rns $NO_PROMPT "$PKG" && exit 0

# brew does not prompt for confirmation before installing packages and does not seem to have options to force prompting
[ "$SETDOTS_MGR" = "brew" ] && HOMEBREW_AUTOREMOVE=1 brew uninstall "$PKG" && exit 0

